<Window x:Class="DemoWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoWpf"
        xmlns:conv="clr-namespace:DemoWpf.Converters"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <conv:BoolInverseConverter x:Key="BoolInverseConverter" />
    </Window.Resources>
    <Grid>
        <Grid.Margin>10</Grid.Margin>
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Width="400">
            <TextBlock Text="Imię" Margin="0,0,0,4"/>
            <TextBox Width="300" Height="26" Text="{Binding FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text="{Binding ValidationMessage}" Foreground="Red" Margin="0,4,0,0" />

            <TextBlock Text="Nazwisko" Margin="0,12,0,4"/>
            <TextBox Width="300" Height="26" Text="{Binding LastName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

        <Button Content="Zapisz" Width="100" Height="30" Margin="0,16,0,0"
            Command="{Binding SaveCommand}"
            IsEnabled="{Binding IsBusy, Converter={StaticResource BoolInverseConverter}}" />

            <TextBlock Text="{Binding DisplayName}" Margin="0,12,0,0" FontWeight="Bold" />
        </StackPanel>
    </Grid>
</Window>
